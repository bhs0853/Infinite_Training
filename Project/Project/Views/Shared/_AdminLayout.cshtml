<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title-Online Banking</title>
    <style>
        html, body {
            height: 100%;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        .body-content {
            flex: 1; 
        }

        footer {
            background-color: #f5f5f5;
            text-align: center;
            padding: 10px 0;
            border-top: 1px solid #ddd;
            color: #333;
        }

        .navbar-right > li > a {
            color: white !important;
        }

            .navbar-right > li > a:hover {
                color: white !important;
                font-weight: 600;
            }

        .dropdown-menu {
            display: none;
            position: absolute;
            top: 100%;
            left: 0;
            background-color: white !important;
            color: black;
            border-radius: 0 0 8px 8px;
            overflow: hidden;
            min-width: 220px;
        }


            .dropdown-menu li {
                display: block;
                width: 100%;
                background-color: white !important;
                color: black;
                border: none;
                text-align: left;
                padding: 5px 5px;
                cursor: pointer;
                font-size: 15px;
            }

            .dropdown-menu > li > a:hover {
                color: #1877F2 !important;
            }

        .dropdown:hover .dropdown-menu {
            display: block;
        }

        .nav-btn {
            background: none;
            border: none;
            color: white !important;
            font-size: 15px;
            margin: 0 12px;
            cursor: pointer;
            padding: 14px;
        }

        .logout-btn > a {
            
            color: #1877F2 !important;
            font-weight: bold;
            font-size: 16px;
        }

        .account-holder-card {
            background-color: #EAF1FF; 
            padding: 15px;
            border-radius: 8px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.05);
            font-family: 'Segoe UI', sans-serif;
            color: #333;
        }

            .account-holder-card h3 {
                font-size: 18px;
                color: #1877F2;
                margin-bottom: 10px;
                display: flex;
                align-items: center;
                gap: 8px;
            }

        .info-row {
            margin: 8px 0;
            font-size: 14px;
            display: flex;
            align-items: center;
            gap: 6px;
        }

            .info-row strong {
                width: 90px;
                display: inline-block;
                color: #555;
            }

            .info-row span {
                color: #000;
            }
    </style>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: #1877F2; color: white; border: 0px;">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" style="color: white !important;" href="@Url.Action("Index", "Home")">Online Banking</a>

                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Home", "Home", "AdminApproval")</li>
                        <li>@Html.ActionLink("Transaction Details", "Index", "Reports")</li>
                        <li>@Html.ActionLink("New Accounts Approval", "PendingApprovals", "AdminApproval")</li>
                        <li>@Html.ActionLink("Support Messages", "ViewMessages", "Support")</li>
                        <li>@Html.ActionLink("Customers", "GetAllCustomers", "AdminApproval")</li>
                        <li>@Html.ActionLink("Logout", "Logout", "AdminApproval")</li>
                    </ul>

                </ul>
            </div>
        </div>
    </div>


    <div class="container body-content" style="margin-top:10px;">
        @RenderBody()


    </div>
    <footer>
        <p>&copy; @DateTime.Now.Year - Online Banking</p>
    </footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
        $(document).ready(function () {
            $.getJSON('/AdminApproval/GetDashboardCounts', function (data) {
                $('#approvalCount').text(data.approvalCount);
                $('#messageCount').text(data.messageCount);
                $('#customerCount').text(data.customerCount);
            });
        });</script>
</body>
</html>
