<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Online Banking</title>
    <style>
        html, body {
            height: 100%;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        .body-content {
            flex: 1; 
        }

        footer {
            background-color: #f5f5f5;
            text-align: center;
            padding: 10px 0;
            border-top: 1px solid #ddd;
            color: #333;
        }

        .navbar-right > li > a {
            color: white !important;
        }

            .navbar-right > li > a:hover {
                color: white !important;
                font-weight: 600;
            }

        .dropdown-menu {
            display: none;
            position: absolute;
            top: 100%;
            left: 0;
            background-color: white !important;
            color: black;
            border-radius: 0 0 8px 8px;
            overflow: hidden;
            min-width: 220px;
        }


            .dropdown-menu li {
                display: block;
                width: 100%;
                background-color: white !important;
                color: black;
                border: none;
                text-align: left;
                padding: 5px 5px;
                cursor: pointer;
                font-size: 15px;
            }

            .dropdown-menu > li > a:hover {
                color: #1877F2 !important;
            }

        .dropdown:hover .dropdown-menu {
            display: block;
        }

        .nav-btn {
            background: none;
            border: none;
            color: white !important;
            font-size: 15px;
            margin: 0 12px;
            cursor: pointer;
            padding: 14px;
        }

        .logout-btn > a {
           
            color: #1877F2 !important;
            font-weight: bold;
            font-size: 16px;
        }

        .account-holder-card {
            background-color: #EAF1FF; 
            padding: 15px;
            border-radius: 8px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.05);
            font-family: 'Segoe UI', sans-serif;
            color: #333;
        }

            .account-holder-card h3 {
                font-size: 18px;
                color: #1877F2;
                margin-bottom: 10px;
                display: flex;
                align-items: center;
                gap: 8px;
            }

        .info-row {
            margin: 8px 0;
            font-size: 14px;
            display: flex;
            align-items: center;
            gap: 6px;
        }

            .info-row strong {
                width: 90px;
                display: inline-block;
                color: #555;
            }

            .info-row span {
                color: #000;
            }
    </style>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: #1877F2; color: white; border: 0px;">
        <div class="container">
   

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-left">
                    <li>
                        @Html.ActionLink("Online Banking", "Index", "Home", null, new { @class = "brand-btn", style = "font-size: 24px; font-weight: bold; color: white;" })
                    </li>

                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (ViewBag.NavType == "Adminloginview" || ViewBag.NavType == "Newnetbankingregistrationview" || ViewBag.NavType == "Forgotuseridview" || ViewBag.NavType == "Forgotpasswordview")
                    {
                        <li>@Html.ActionLink("Customer Login", "CustomerLogin", "InternetBanking")</li>
                        <li>@Html.ActionLink("Create a Account", "Register", "Account")</li>

                    }
                    else if (ViewBag.NavType == "Newaccountregistrationview")
                    {
                        <li>@Html.ActionLink("Home", "", "Home")</li>
       

                    }
                    else if (ViewBag.NavType == "Userloginview")
                    {
                        <li>@Html.ActionLink("Create a Account", "Register", "Account")</li>
    

                    }
                    else if (ViewBag.NavType == "UserLoggedIn")
                    {
                        <ul class="nav navbar-nav navbar-left" style="display: flex; align-content:center; justify-content:space-evenly; gap: 24px;">

                            <li class="dropdown">
                                <button class="nav-btn dropdown-toggle" data-toggle="dropdown">Account <b class="caret"></b></button>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Overview", "Dashboard", "InternetBanking")</li>
                             
                                    <li>@Html.ActionLink("Account Statement", "Statement", "Transaction")</li>
                                </ul>
                            </li>

                            <li class="dropdown">
                                <button class="nav-btn dropdown-toggle" data-toggle="dropdown">Transfers <b class="caret"></b></button>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Add Beneficiary", "AddPayee", "Transaction")</li>
                                    <li>@Html.ActionLink("View Beneficiaries", "GetAllPayees", "Transaction")</li>
                                    <li>@Html.ActionLink("Fund Transfer", "Transfer", "Transaction")</li>
                                   
                                </ul>
                            </li>

                            <li>@Html.ActionLink("Change Login Password", "ChangeLoginPassword", "InternetBanking", null, new { @class = "nav-btn" })</li>
                            <li>@Html.ActionLink("Support", "SendSupportMessage", "InternetBanking", null, new { @class = "nav-btn" })</li>
                        </ul>

                        <ul class="nav navbar-nav navbar-right">

                            <li class="logout-btn">
                                @Html.ActionLink("Logout", "CustomerLogout", "InternetBanking", null, new { @class = "" })
                            </li>
                        </ul>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Home", "", "Home")</li>
                        <li>@Html.ActionLink("Create a Account", "Register", "Account")</li>
                    }
                </ul>
            </div>
        </div>
    </div>


    <div class="container body-content">
        @if (ViewBag.NavType == "UserLoggedIn")
        {
            <div class="page" style="display:flex;">
                <aside class="side-bar" style="background-color: #F0F8FF; margin-left: -10px; padding: 50px 10px 110px 10px; margin-right: 50px; ">
                    <div class="account-info account-holder-card" style="background-color: white; margin-top: 50px; padding: 50px 40px; border-radius: 5px;">
                        <h3><i class="fas fa-user-circle"></i> Account Information</h3>
                        <div class="info-row"><i class="fas fa-user"></i> <strong>Name:</strong> <span>@ViewBag.Account.Customer.First_Name</span></div>
                        <div class="info-row"><i class="fas fa-id-card"></i> <strong>Account No:</strong> <span>@ViewBag.Account.Account_Number</span></div>
                        <div class="info-row"><i class="fas fa-envelope"></i> <strong>Email:</strong> <span>@ViewBag.Account.Customer.Email_Id</span></div>
                        <div class="info-row"><i class="fas fa-phone"></i> <strong>Phone:</strong> <span>@ViewBag.Account.Customer.Mobile_Number</span></div>
                    </div>
                </aside>
                <main class="content" style="flex: 1; padding: 24px; background-color: #F0F8FF; ">
                    @RenderBody()
                </main>
            </div>
        }
        else
        {

            @RenderBody()
        }


    </div>
    <footer>
        <p>&copy; @DateTime.Now.Year - Online Banking</p>
    </footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
<script>
    history.pushState(null, null, location.href);
    window.onpopstate = function () {
        window.location.href = '/InternetBanking/CustomerLogout';
    };
</script>
