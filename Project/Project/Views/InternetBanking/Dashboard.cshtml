@model (Project.Models.Account, List<Project.Models.Transaction_Details>)

@{
    ViewBag.Title = "Dashboard";
    ViewBag.NavType = "UserLoggedIn";
    ViewBag.Account = Model.Item1;
    Layout = "~/Views/Shared/_Banking.cshtml";
    var count = 0;
}
<style>
    .grid {
        display: grid;
        gap: 20px;
        margin: 30px 0;
    }

    .grid.three {
        grid-template-columns: repeat(3, 1fr);
    }

    .grid.two {
        grid-template-columns: repeat(2, 1fr);
    }

    .card {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        padding: 20px;
    }

    .card h3 {
        font-size: 20px;
        color: black;
        margin-bottom: 15px;
        border-bottom: 1px solid #eee;
        padding-bottom: 10px;
    }

    .stat-label {
        font-size: 10px;
        font-weight: 600;
        color: #666;
        margin-bottom: 5px;
    }

    .stat-value {
        font-size: 18px;
        font-weight: bold;
        color: black;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
    }

    .table th, .table td {
        padding: 10px;
        text-align: left;
        border-bottom: 1px solid #ddd;
        font-size: 14px;
    }

    .table th {
        background-color: #f5f5f5;
        color: #333;
    }

    .btn-row {
        margin-top: 20px;
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
    }

    .btn {
        padding: 10px 20px;
        border-radius: 4px;
        text-decoration: none;
        font-weight: 600;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .btn.white {
        background-color: #fff;
        color: #1877F2;
        border: 1px solid #1877F2;
    }

    .btn.white:hover {
        background-color: #1877F2;
        color: #fff;
    }

    .btn.outline {
        background-color: transparent;
        color: #1877F2;
        border: 2px solid #1877F2;
    }

    .btn.outline:hover {
        background-color: #1877F2;
        color: #fff;
    }
   
</style>


<div class="grid three">
    <div class="card stat">
        <div class="stat-label">Account Number</div>
        <div class="stat-value">
            @Model.Item1.Account_Number
        </div>
    </div>
    <div class="card stat">
        <div class="stat-label">Available Balance</div>
        <div class="stat-value">₹ @Model.Item1.Balance</div>
    </div>
    <div class="card stat">
        <div class="stat-label">Last Login</div>
        <div class="stat-value">@ViewBag.LastLogin</div> 
    </div>
</div>

<div class="grid two">
    <div class="card">
        <h3>Recent Transactions</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Desc</th>
                    <th>Type</th>
                    <th>Amount</th>
                    <th>Balance</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var txn in Model.Item2)
                {
                    <tr>
                        <td>@txn.Transaction_Date</td>
                        <td>@txn.Transaction_Mode - @txn.Remarks.Substring(0, Math.Min(10, txn.Remarks.Length))</td>
                        <td>@txn.Transaction_Type</td>
                        <td>₹ @txn.Amount</td>
                        <td>₹ @txn.Balance</td>
                    </tr>
                    count++;
                    if (count == 3)
                    {
                        break;
                    }
                }
            </tbody>
        </table>
        <div class="btn-row">
            @Html.ActionLink("View Statement", "Statement", "Transaction", null, new { @class = "btn outline" })
        </div>
    </div>

    <div class="card">
        <h3>Quick Actions</h3>
        <div class="btn-row wrap">
            @Html.ActionLink("Add Payee", "AddPayee", "Transaction", null, new { @class = "btn white" })
            @Html.ActionLink("View Beneficiaries", "GetAllPayees", "Transaction", null, new { @class = "btn white" })
            @Html.ActionLink("Fund Transfer", "Transfer", "Transaction", null, new { @class = "btn white" })
            @Html.ActionLink("Change Login Password", "ChangeLoginPassword", "InternetBanking", null, new { @class = "btn white" })
            @Html.ActionLink("Change Transaction Password", "ChangeTransactionPassword", "InternetBanking", null, new { @class = "btn white" })
        </div>
    </div>
</div>
