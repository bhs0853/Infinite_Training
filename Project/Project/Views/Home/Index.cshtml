@{
    ViewBag.Title = "Home Page";
}

<div class="main-container">
    <div class="welcome-banner">
        <h1>Welcome to Online Banking Portal</h1>
        <p>Secure • Reliable • Anytime Banking</p>
    </div>

    <div class="card-container">
        <div class="card">
            <h2>Customer</h2>
            <p>Access your accounts, transfer funds, and manage your finances.</p>
            @Html.ActionLink("Customer Login", "CustomerLogin", "InternetBanking", null, new { @class = "card-button"})
        </div>

        <div class="card">
            <h2>Admin</h2>
            <p>Manage users, monitor transactions, and oversee system operations.</p>
            @Html.ActionLink("Admin Login", "AdminLogin", "AdminApproval", null, new { @class = "card-button" })

        </div>
    </div>
</div>


<style>
    .main-container {
        padding: 40px 80px 60px 80px;

        text-align: center;
        background-color: #f0f4f8;
    }

    .welcome-banner h1 {
        font-size: 36px;
        color: #1877F2;
        margin-bottom: 10px;
    }

    .welcome-banner p {
        font-size: 18px;
        color: #555;
        margin-bottom: 20px;
    }

    .banner-image {
        width: 100%;
        max-width: 800px;
        height: auto;
        border-radius: 10px;
        margin-bottom: 40px;
    }

    .card-container {
        display: flex;
        justify-content: center;
        gap: 40px;
        flex-wrap: wrap;
    }

    .card {
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        padding: 30px;
        width: 300px;
        transition: transform 0.3s ease;
    }

/*        .card:hover {
            transform: translateY(-5px);
        }*/

        .card h2 {
            color: #1877F2;
            margin-bottom: 10px;
        }

        .card p {
            color: #333;
            font-size: 16px;
            margin-bottom: 20px;
        }

    .card-button {
        display: inline-block;
        padding: 10px 20px;
        background-color: #0073e6;
        color: white;
        text-decoration: none;
        border-radius: 5px;

    }

        .card-button:hover {
            font-weight: 600;
            color: white !important;
            text-decoration: none !important;
        }
</style>
